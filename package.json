{
  "name": "github-nerd",
  "version": "1.0.0",
  "description": "react web page for viewing user's github activity",
  "homepage": "https://nntrn.github.io/github-nerd/",
  "author": "annie tran (https://github.com/nntrn)",
  "private": true,
  "keywords": [
    "github",
    "api",
    "react"
  ],
  "scripts": {
    "clear-babel-cache": "rm -rf ./node_modules/.cache/babel-loader/*",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "css": "stylelint src/**/*.scss",
    "lint": "eslint src/ --fix && stylelint src/style/*.scss --fix"
  },
  "dependencies": {
    "chartist": "^0.11.3",
    "react": "^16.8.6",
    "react-chartist": "^0.13.3",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "gh-pages": "^2.0.1",
    "node-sass-chokidar": "^1.3.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.14.2",
    "react-scripts": "^3.0.1",
    "react-styleguidist": "^9.1.11",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-order": "^2.2.1",
    "stylelint-scss": "^3.6.0"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "tabWidth": 2
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11"
  ],
  "verb": {
    "toc": false,
    "layout": "user",
    "tasks": [
      "readme"
    ],
    "lint": {
      "reflinks": true
    }
  }
}
